<script>
    let pagarForms = document.querySelectorAll('#pagar form'),
    loadingBtns = document.querySelectorAll('#pagar .btnLoading'),
    continueBtns = document.querySelectorAll('#pagar .btnContinue'),
    statusForms = document.querySelectorAll('#pagar .status');

    loadingBtns.forEach((btn, i) => {
        btn.classList.add('d-none');
        statusForms[i].classList.add('d-none');
        continueBtns[i].classList.add('d-none');
        continueBtns[i].addEventListener('click', e => {
            window.location.replace("/boardpresalepy27/PYT-27");
        });
    });

    pagarForms.forEach(form => {
        form.addEventListener('submit', e => {
            e.preventDefault();
            let select = e.target,
            selectId = e.target.getAttribute('id'),
            status = document.querySelector(`#${selectId} .status`),
            btnLoading = document.querySelector(`#${selectId} .btnLoading`),
            btnLoadingStatusMain = document.querySelector(`#${selectId} .btnLoading`),
            btnLoadingStatus = document.querySelector(`#${selectId} .btnLoading span.align-middle`),
            btnContinue = document.querySelector(`#${selectId} .btnContinue`),
            hashInp = document.querySelector(`#${selectId} .hash`),
            btnSubmit = document.querySelector(`#${selectId} .btnSubmit`);

            status.classList.remove('d-none');
            status.classList.add('d-block');
            btnSubmit.classList.add('d-none');
            btnLoading.classList.remove('d-none');
            btnLoading.classList.add('d-block');

            console.log(select)

            let sectionsModals = document.querySelectorAll('#pagar .step');

            sectionsModals.forEach(bt => {
                if(!bt.classList.contains('active')) {     
                    console.log(bt.childNodes[1].disabled)
                    if(bt.childNodes[1].disabled === false) {
                        bt.childNodes[1].disabled = true;
                    }
                }
            });

            hashInp.readOnly = true;
            
            let data = new FormData(select);

            fetch('/buyaerocoins', {
                method: 'POST',
                body: data
            })
                .then(response => response.json())
                .then(data => {
                    console.log(data)
                    console.log(data.response)
                    let idDeposito = data.response.id;

                    let form = document.getElementById('formDeposito'),
                    inDep = document.querySelector('#formDeposito input');
                    inDep.value = idDeposito;
                    
                    let formData = new FormData(form)
                    
                    console.log(form) 
                    console.log(formData) 

                    const VerifyDeposit = () => {
                        fetch('/getdeposituser', {
                            method: 'POST',
                            body: formData
                        })
                            .then(response2 => response2.json())
                            .then(data2 => {
                                console.log(data2)

                                if(data2.status === 'Aprobado') {
                                    clearInterval(interval)
                                    btnLoadingStatusMain.innerText = 'Â¡Approved!';
                                    btnLoading.classList.remove('btn-outline-primary');
                                    btnLoading.classList.add('btn-outline-success');
                                    btnContinue.classList.remove('d-none');
                                    btnContinue.classList.add('d-block');
                                    status.innerText = 'Your deposit has been approved, click on the continue button to complete your transaction...';

                                } else if(data2.status === 'Rechazado') {
                                    clearInterval(interval)
                                    btnLoadingStatusMain.innerText = 'Â¡Rejected!';
                                    btnLoading.classList.remove('btn-outline-primary');
                                    btnLoading.classList.add('btn-outline-danger');
                                    btnContinue.classList.remove('d-none');
                                    btnContinue.classList.add('d-block');
                                    status.innerText = 'Your deposit has been rejected, please enter another hash to proceed with another transaction...';
                                }
                            })
                            .catch((err) => {
                                console.log(err)
                            });
                    }

                    let interval = setInterval(VerifyDeposit, 10000);

                    btnLoadingStatus.innerText = 'Not Verified...';
                });
        });
    });

    let selectBanks = document.getElementById('selectBanks'),
    selectPayms = document.getElementById('selectPaym'),
    selectWallets = document.getElementById('digWallet'),
    selectBtc = document.getElementById('btc');

    let resultBtc;
    fetch('https://api.coingecko.com/api/v3/exchange_rates')
    .then(response => response.json())
    .then(data => {
        let arr = data.rates
        resultBtc = arr.usd.value
    });
   
    let resultBnb;
     fetch('https://api.coingecko.com/api/v3/coins/binancecoin/market_chart?vs_currency=usd&days=1')
    .then(response => response.json())
    .then(data => {
        //console.log(data.prices[0][1])
        let price = data.prices[0][1];
        resultBnb = price;
    });

    let buyBtn = document.getElementById('buybtn');

    buyBtn.addEventListener('click', () => {
        let amountUsd= document.getElementById('amountUsd');
        let InCoin = document.querySelectorAll('.amountCoin');

        let btc = document.getElementById('amountbtc');
        let bnb = document.getElementById('amountbnb');
        let priceACN = parseFloat(document.getElementById('price_').value);

        btc.value = priceACN / resultBtc;
        bnb.value =  priceACN / resultBnb;

        let amount = amountUsd.value;

        InCoin.forEach(inp => {
