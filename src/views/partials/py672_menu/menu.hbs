<div class="modal fade py672" id="registrarAlumno" tabindex="-1" aria-modal="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-transparent">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pb-5 px-sm-4 mx-50">
                <h1 class="address-title text-center mb-1" id="addNewAddressTitle">Registrar Alumno</h1>

                <form  class="form" action="/registrarestudiantepy672" method="POST">
                    <div class="row">
                        <div class="col-12 col-xl-6 mb-1">
                            <div class="list-item-body flex-grow-1">
                                <label class="form-label">Grupo</label>

                                <div class="position-relative">
                                    <select class="select2 form-select" tabindex="-1" name="grupoId" aria-hidden="true" required>
                                        {{#each gruposTodos as |item i|}}
                                        <option value="{{id}}">
                                            {{identificador}} - {{dia_horario}} - {{#fechamenumatriculapy672 fecha_inicio}}{{/fechamenumatriculapy672}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                                
                            </div>
                        </div>
                        
                        <div class="col-12 col-xl-6 mb-1">
                            <div class="list-item-body flex-grow-1">
                                <label class="form-label">Nombre Completo</label>
                                <input type="text" class="form-control" placeholder="Nombre Completo" name="nombre" required>
                            </div>
                        </div>


                        <div class="col-12 mb-1">
                            <div class="flex-grow-1 mb-1">
                                <label class="form-label" for="">Nacional</label>
                                <div class="demo-inline-spacing">
                                    <div class="form-check form-check-inline mt-0">
                                        <input class="form-check-input" type="radio" name="tipo" id="inlineRadio1" value="1" checked="">
                                        <label class="form-check-label" for="inlineRadio1">Nacional</label>
                                    </div>
                                    <div class="form-check form-check-inline mt-0">
                                        <input class="form-check-input" type="radio" id="inlineRadio2" name="tipo" value="2">
                                        <label class="form-check-label" for="inlineRadio2">Extranjero</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row m-0 p-0">
                                <div id="nacionalCampos" class="col-12 col-xl-6 p-0 pe-xl-1 mb-1">
                                    <div class="flex-grow-1">
                                        <label class="form-label" for="fp-default">No. Identificación</label>
                                    </div>
                                    <div class="flex-grow-1 d-flex">
                                        <input type="text" class="d-none" name="dni" id="nacionalDni" value="">

                                        <input type="number" class="form-control" id="primerCampo" minlength="1" maxlength="1" autocomplete="off">
                                        <input type="number" class="form-control mx-1"id="segundoCampo" min="0" minlength="4" maxlength="4" autocomplete="off">
                                        <input type="number" class="form-control" id="tercerCampo" minlength="4" maxlength="4" autocomplete="off">
                                    </div>
                                </div>

                                <div id="ExtranjeroCampo" class="col-12 col-xl-6 p-0 pe-xl-1 mb-1">
                                    <div class="flex-grow-1">
                                        <label class="form-label" for="fp-default">No. Identificación</label>
                                        <input type="text" class="form-control" placeholder="No. Identificación" id="exDni">
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 col-xl-3 mb-1 p-0 ps-md-0 pe-md-1 ps-xl-1 pe-xl-0">
                                    <div class="flex-grow-1">
                                        <label class="form-label" for="fp-default">Fecha de nacimiento</label>
                                        <input type="text" id="fp-default" class="form-control flatpickr-basic" placeholder="YYYY-MM-DD" name="nacimiento" required>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 col-xl-3 mb-1 p-0 pe-md-0 ps-md-1">
                                    <div class="flex-grow-1">
                                        <label class="form-label" for="fp-default">Sexo</label>
                                        <select class="form-select select2" name="genero" required>
                                            <option value="">Seleccionar Género</option>
                                            <option value="Femenino">Femenino</option>
                                            <option value="Masculino">Masculino</option>
                                        </select>                                    
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-12 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Nacional</label>
                                <div class="demo-inline-spacing">
                                    <div class="form-check form-check-inline mt-0">
                                        <input class="form-check-input" type="radio" name="tlf" id="inlineRadioTlf1" value="4" checked="">
                                        <label class="form-check-label" for="inlineRadioTlf1">Nacional</label>
                                    </div>
                                    <div class="form-check form-check-inline mt-0">
                                        <input class="form-check-input" type="radio" id="inlineRadioTlf2" name="tlf" value="3">
                                        <label class="form-check-label" for="inlineRadioTlf2">Extranjero</label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-md-6 col-lg-4 mb-1 nacionalTlf">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Teléfono 1</label>
                                <input type="text" maxlength="8" class="form-control" name="telefono1">
                            </div>
                        </div>

                        <div class="col-12 col-md-6 col-lg-4 mb-1 nacionalTlf">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Teléfono 2</label>
                                <input type="text" maxlength="8" class="form-control" name="telefono2">
                            </div>
                        </div>

                        <div class="col-12 col-md-6 col-lg-4 mb-1 extranjeroTlf">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Teléfono 1</label>
                                <input type="text" class="form-control" name="telefono3">
                            </div>
                        </div>

                        <div class="col-12 col-md-6 col-lg-4 mb-1 extranjeroTlf">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Teléfono 2</label>
                                <input type="text" class="form-control" name="telefono4">
                            </div>
                        </div>


                        <div class="col-12 col-lg-4 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="fp-default">Email</label>
                                <input type="text" class="form-control" name="email" required>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-xl-3 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="">Vendedor</label>
                                <select type="text" class="form-select select2" name="vendedor">
                                    <option value="">Seleccione un Vendedor</option>
                                    <option value="">Isaac Mosqueda</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-xl-3 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="fp-default">Provincia</label>
                                <div class="position-relative">
                                    <select class="select2 form-select" tabindex="-1" name="provincia" aria-hidden="true" id="select-provincia" required>
                                        <option value="">Seleccione una Provincia</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-xl-3 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="fp-default">Cantón</label>
                                <div class="position-relative">
                                    <select class="select2 form-select" id="select-canton" tabindex="-1" name="canton" aria-hidden="true" disabled required>
                                        <option value="">Seleccione un Canton</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 col-xl-3 mb-1">
                            <div class="flex-grow-1">
                                <label class="form-label" for="fp-default">Distrito</label>
                                <select class="select2 form-select" id="select-distrito" tabindex="-1" name="distrito" aria-hidden="true" disabled required>
                                    <option value="">Seleccione un Distrito</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12">
                            <input type="submit" class="btn btn-primary" value="Registrar">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let radio1 = document.getElementById('inlineRadio1'),
    radio2 = document.getElementById('inlineRadio2'),
    radioTlf3 = document.getElementById('inlineRadioTlf1'),
    radioTlf4 = document.getElementById('inlineRadioTlf2'),
    nacionalC = document.getElementById('nacionalCampos'),
    exC = document.getElementById('ExtranjeroCampo'),
    nacionalDni = document.getElementById('nacionalDni'),
    exDni = document.getElementById('exDni'),
    tlfNacional = document.querySelectorAll('.nacionalTlf'),
    tlfNacionalInput = document.querySelectorAll('.nacionalTlf input'),
    tlfExtranjero = document.querySelectorAll('.extranjeroTlf'),
    primerC = document.getElementById('primerCampo'),
    segundoC = document.getElementById('segundoCampo'),
    tercerC = document.getElementById('tercerCampo');

    let exp =  /^[0-9]+$/;
    primerC.addEventListener('keydown', e => {
        nacionalDni.value = primerC.value + segundoC.value + tercerC.value;
        if (primerC.value.match(exp)) {
            segundoC.focus();
        } else {
            primerC.value = '';
        }
    });

    segundoC.addEventListener('keydown', e => {
        nacionalDni.value = primerC.value + segundoC.value + tercerC.value;
        if (segundoC.value.match(exp)){
            if(segundoC.value.length === 4) {
                tercerC.focus();
            }
        } else {
            segundoC.value.slice(0,-1);
        }
    });

    tercerC.addEventListener('keydown', e => {
        nacionalDni.value = primerC.value + segundoC.value + tercerC.value;
        let current = '';
        if (!tercerC.value.match(exp)){
            tercerC.value = current;
        } else {
            tercerC.value.slice(0,-1);
        }
    });

    radio1.addEventListener('change', e => {
        SetRadio1();
    });

    radio2.addEventListener('change', e => {
        SetRadio2();
    });

    radioTlf3.addEventListener('change', e => {
        SetRadio3();
    });

    radioTlf4.addEventListener('change', e => {
        SetRadio4();
    });

    tlfNacionalInput.forEach(input => {
        input.addEventListener('keydown', e => {
            let texto = ''
            if(!input.value.match(exp)) {
                texto += texto.slice(1,-1)
            } else {
                texto += input.value 
            }
            input.value = texto 
        });
    });

    const SetRadio1 = () => {
        nacionalC.classList.remove('d-none');
        nacionalC.classList.add('d-block');

        exC.classList.remove('d-block');
        exC.classList.add('d-none');
    }

    const SetRadio2 = () => {
        exC.classList.remove('d-none');
        exC.classList.add('d-block');

        nacionalC.classList.remove('d-block');
        nacionalC.classList.add('d-none');
    }

    const SetRadio3 = () => {
        tlfNacional.forEach(tlf => {
            tlf.classList.remove('d-none');
            tlf.disabled = false;
        });
        tlfExtranjero.forEach(tlf => {
            tlf.classList.add('d-none');
            tlf.disabled = true;
        });
    }

    const SetRadio4 = () => {
        tlfExtranjero.forEach(tlf => {
            tlf.classList.remove('d-none');
            tlf.disabled = false;
        });
        tlfNacional.forEach(tlf => {
            tlf.classList.add('d-none');
            tlf.disabled = true;
        });
    }

    SetRadio1();

    SetRadio3();

    exDni.addEventListener('keydown', e => {
        nacionalDni.value = exDni.value;
    });
</script>